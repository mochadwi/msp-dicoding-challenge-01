<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Modul2.KalkulatorPage">
	<StackLayout Orientation="Vertical"> 
    <Label Text="Number 1 :" FontSize="Medium" /> 
    <Entry x:Name="entryNo1" Placeholder="input number 1" Keyboard="Numeric" /> 
    <Label Text="Number 2 :" FontSize="Medium" /> 
    <Entry x:Name="entryNo2" Placeholder="input number 2" Keyboard="Numeric" /> 
    <Label Text="Result :" FontSize="Medium" /> 
    <Entry x:Name="entryResult" IsEnabled="false" /> 

    <StackLayout Orientation="Horizontal"> 
      <Button x:Name="btnAdd" Text="Add" /> 
      <Button x:Name="btnSubstract" Text="Substract" /> 
      <Button x:Name="btnMultiply" Text="Multiply" /> 
      <Button x:Name="btnDivision" Text="Division" /> 
    </StackLayout> 
  </StackLayout>
</ContentPage>
