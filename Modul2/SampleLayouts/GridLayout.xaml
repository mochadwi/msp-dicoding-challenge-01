<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Modul2.GridLayout">
	<Grid>
        <!--  Initialize row  -->
        <Grid.RowDefinitions> 
          <!-- Row start from 0 -->  
          <RowDefinition Height="*" /> <!-- 0 -->
          <RowDefinition Height="*" /> <!-- 0 -->
          <RowDefinition Height="*" /> <!-- 0 -->
        </Grid.RowDefinitions> 

        <!--  Initialize column      -->
        <Grid.ColumnDefinitions> 
            <!-- Column start from 0 -->
          <ColumnDefinition Width="*" /> <!-- 0 -->
          <ColumnDefinition Width="*" /> <!-- 1 -->
            <ColumnDefinition Width="*" /> <!-- 2 -->
        </Grid.ColumnDefinitions>
        
        <Label Text="Top Left" Grid.Row="0" Grid.Column="0" />
        <Label Text="Top Middle" Grid.Row="0" Grid.Column="1" />
        <Label Text="Top Right" Grid.Row="0" Grid.Column="2" /> 
        <Label Text="Middle Left" Grid.Row="1" Grid.Column="0" /> 
        <Label Text="Middle Middle" Grid.Row="1" Grid.Column="1" />
        <Label Text="Middle Right" Grid.Row="1" Grid.Column="2" /> 
        <Label Text="Bottom Left" Grid.Row="2" Grid.Column="0" /> 
        <Label Text="Bottom Middle" Grid.Row="2" Grid.Column="1" /> 
        <Label Text="Bottom Right" Grid.Row="2" Grid.Column="2" /> 
    </Grid>
</ContentPage>
