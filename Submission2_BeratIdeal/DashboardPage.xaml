<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Submission2_BeratIdeal.DashboardPage" BackgroundColor="Black">
    <StackLayout Margin="16">
        <!--      Input      -->
        <Label Text="Tinggi Badan (cm):" TextColor="White" />
        <Entry x:Name="entHeight" Placeholder="Contoh: 180" PlaceholderColor="Gray" TextColor="Gray" />
        <Label Text="Berat Badan (kg):" TextColor="White" />
        <Entry x:Name="entWeight" Placeholder="Contoh: 56" PlaceholderColor="Gray" TextColor="Gray" />
        <Button Text="Hitung Berat Ideal Laki-laki" Clicked="Handle_MaleIdealMess" />
        <Button Text="Hitung Berat Ideal Perempuan" Clicked="Handle_FemaleIdealMess" />
        <!--     Result       -->
        <Label Text="Berat Badan Ideal (Brocha):" TextColor="White" />
        <Label x:Name="lblBrochaValue" Text="" TextColor="Gray" />
        <Label Text="Nilai BMI:" TextColor="White" />
        <Label x:Name="lblBmiValue" Text="" TextColor="Gray" />
        <Label Text="Kesimpulan:" TextColor="White" />
        <Label x:Name="lblSummaryValue" Text="" TextColor="Gray" />
    </StackLayout>
</ContentPage>